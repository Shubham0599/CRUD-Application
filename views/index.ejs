<%- include('partials/header.ejs');-%>
<div class="mainy">
<div class="ui main text container">
    <div class="ui huge header red">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% data.forEach(function(x){%>
                <div class="item">
                    <div class="image"> <img src="<%= x.image%>"></div>
                    
                    <div class="description" style="margin-left: 12px;">
                        <h2><%= x.title%></h2>
                        <span><%=x.created.toDateString()%></span>
                        <p><%=x.body.slice(0,90)%>.....</p>
                        <a class="ui tiny olive button" href="blogs/<%=x._id%>">Read More<i class="ui icon hand point right outline"  ></i></a>
                        </div>
                    
                </div>
                <%})%>
        </div>
    </div>
</div>

   
</div>
<%-include('partials/footer.ejs');-%>