<%- include('partials/header.ejs');-%>
<div class="mainy">
<div class="ui main text container segment">
    <div class="ui huge header"><%=data.title%></div>
    <div class="ui top attached"> 
        <div class="item">
            <img  class="ui centered rounded image" src="<%=data.image%>" alt="">
            <div class="content">
                <span><%=data.created.toDateString()%></span>
            </div>
            <div class="description" >
                <p><%-data.body%></p>
            </div>
            <a class="ui button basic violet" href="/blogs/<%=data._id%>/edit">EDIT</a>
            <form id="delete" class="ui form" method="POST" action="/blogs/<%=data._id%>?_method=DELETE">
            <button class="ui button basic red">DELETE</button>
            </form>
        </div>
    </div>
</div>
</div>
<%- include('partials/footer.ejs');-%>